extends ./_layout/_page.pug

block vars
  -
    var page = pages.index;

block content
  form(
    id = "vue-form",
    class = "p-vue-form",
    @submit="submit",
  )
    h1.p-vue-form__head
      |vue-form

    .p-vue-form__step
      .p-vue-form__step-item(:class="{ 'is-current' : step == 0 }")
        |Step1 : Input
      .p-vue-form__step-item(:class="{ 'is-current' : step == 1 }")
        |Step2 : Confirm
      .p-vue-form__step-item(:class="{ 'is-current' : step == 2 }")
        |Step3 : Finish

    .p-vue-form__contents
      .p-vue-form__item
        .p-vue-form__item-head
          |input text
        .p-vue-form__item-body
          input(
            type = "text",
            value = "",
            placeholder = "input text",
            class = "p-vue-form__input",
            v-model = "input.text"
          )
          .p-vue-form__item-error(v-show="validation.text == false")
            |{{ errorMsg.text }}
      .p-vue-form__item
        .p-vue-form__item-head
          |input mail
        .p-vue-form__item-body
          input(
            type = "mail",
            value = "",
            placeholder = "input mail",
            class = "p-vue-form__input",
            v-model = "input.mail"
          )
          .p-vue-form__item-error(v-show="validation.mail == false")
            |{{ errorMsg.mail }}
      .p-vue-form__item
        .p-vue-form__item-head
          |radio button
        .p-vue-form__item-body
          .p-vue-form__label-wrap
            label
              input(
                type = "radio",
                name = "radio",
                value = "Radio A",
                v-model = "input.radio",
                class = "p-vue-form__radio"
              )
              |Radio A
            label
              input(
                type = "radio",
                name = "radio",
                value = "Radio B",
                v-model = "input.radio",
                class = "p-vue-form__radio"
              )
              |Radio B
            label
              input(
                type = "radio",
                name = "radio",
                value = "Radio C",
                v-model = "input.radio",
                class = "p-vue-form__radio"
              )
              |Radio C
          .p-vue-form__item-error(v-show="validation.radio == false")
            |{{ errorMsg.radio }}
      .p-vue-form__item
        .p-vue-form__item-head
          |checkbox
        .p-vue-form__item-body
          .p-vue-form__label-wrap
            label
              input(
                type = "checkbox", 
                value = "Checkbox A", 
                v-model = "input.checkbox",
                class = "p-vue-form__checkbox"
              )
              |Checkbox A
            label
              input(
                type = "checkbox", 
                value = "Checkbox B", 
                v-model = "input.checkbox",
                class = "p-vue-form__checkbox"
              )
              |Checkbox B
            label
              input(
                type = "checkbox", 
                value = "Checkbox C", 
                v-model = "input.checkbox",
                class = "p-vue-form__checkbox"
              )
              |Checkbox C
          .p-vue-form__item-error(v-show="validation.checkbox == false")
            |{{ errorMsg.checkbox }}
      .p-vue-form__item
        .p-vue-form__item-head
          |select
        .p-vue-form__item-body
          select(
            v-model = "input.select"
          )
            option(value="Select A")
              |Select A
            option(value="Select B")
              |Select B
            option(value="Select C")
              |Select C
          .p-vue-form__item-error(v-show="validation.select == false")
            |{{ errorMsg.select }}
      .p-vue-form__item
        .p-vue-form__item-head
          |multi column text
        .p-vue-form__item-body
          textarea(
            cols = "60",
            rows = "8",
            v-model = "input.multiText",
            class = "p-vue-form__textarea"
          )
          .p-vue-form__item-error(v-show="validation.multiText == false")
            |{{ errorMsg.multiText }}

    .p-vue-form__submit
      .p-vue-form__submit-wrap(v-show="step == 0")
        input(
          type = "submit",
          value = "Confirm input content",
          class = "p-vue-form__button p-vue-form__button--submit"
        )
      .p-vue-form__submit-wrap(v-show="step == 1")
        input(
          type = "submit",
          value = "Back",
          class = "p-vue-form__button p-vue-form__button--utility"
        )
        input(
          type = "submit",
          value = "Submit",
          class = "p-vue-form__button p-vue-form__button--submit"
        )
      .p-vue-form__submit-wrap(v-show="step == 2")
        input(
          type = "submit",
          value = "Back to Home",
          class = "p-vue-form__button p-vue-form__button--submit"
        )
